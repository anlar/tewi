ScrollableContainer {
    scrollbar-size-vertical: 1;
}

TorrentItem {
    padding: 0 1;
    layout: vertical;
    background: $boost;
    min-width: 50;
    border: round white 70%
}

TorrentItem.selected {
    background: green
}

#torrent-item-head {
    height: auto;
    grid-size: 6;
    grid-columns: auto 1fr auto 9 auto 9;
}

#torrent-item-head-name {
    text-style: bold;
}

#torrent-item-stats {
    text-opacity: 75%;
}

StatusLine {
    layout: grid;
    grid-size: 6;
    grid-columns: auto 1fr auto 9 auto 11;
    background: grey;
    height: 1;
}

ConfirmationDialog {
    align: center middle;
}

#dialog {
    grid-size: 1 2;
    grid-gutter: 1 2;
    padding: 0 1;
    width: 60;
    height: auto;
    border: round white 70%;
    background: $surface;
}

Bar {
    width: 1fr
}
